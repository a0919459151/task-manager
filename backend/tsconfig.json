{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "contracts/*": ["../contracts/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}